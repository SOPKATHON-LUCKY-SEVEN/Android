<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle_radius_15"
    android:backgroundTint="#CCFFFFFF">

    <TextView
        android:id="@+id/tv_dialog_letter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="32dp"
        android:text="안녕!\n너가 오늘 지친 나를 위해 응원의 댄스를 춰줘서 고마워서 조심스럽게 별을 보내.\n엄청 고맙고 앞으로도 잘 부탁해 !"
        android:textAppearance="@style/TextAppearance.Star23.HeadLine5"
        android:layout_marginHorizontal="30dp"
        android:minLines="8"
        app:layout_constraintBottom_toTopOf="@id/tv_dialog_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_dialog_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="From. "
        android:textAppearance="@style/TextAppearance.Star23.SubTitle1"
        app:layout_constraintBottom_toBottomOf="@id/tv_dialog_name"
        app:layout_constraintEnd_toStartOf="@id/tv_dialog_name"
        app:layout_constraintTop_toTopOf="@id/tv_dialog_name" />

    <TextView
        android:id="@+id/tv_dialog_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="몽쉘"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="30dp"
        android:textAppearance="@style/TextAppearance.Star23.SubTitle1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>